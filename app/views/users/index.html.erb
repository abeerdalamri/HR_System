<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<p style="padding-buttom:100px;"><%= link_to "New user", new_user_path %></p>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email%></td>
        <td><%= link_to "Show this user", user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

