<p style="color: green"><%= notice %></p>

<h1>Divisons</h1>

<div id="divisons">
 
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Team</th>
      <th scope="col">Manager</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @divisons.each do |divison| %>
      <tr>
        <td><%= divison.name %></td>
        <td><%= divison.team%></td>
        <td><%= divison.manager%></td>
        <td><%= divison.desc%></td>
        <td><%= link_to "Show this divison", divison %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to "New divison", new_divison_path %>
